<Window x:Class="TechStore.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TechStore MVVM" Height="500" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Товары" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Products}"
                 SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                 FontSize="14">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="150"/>
                        <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" Width="120"/>
                        <TextBlock Text="{Binding Category}" Width="200"/>
                        <TextBlock Text="{Binding StockQuantity, StringFormat='Остаток: {0}'}" Width="100"/>
                        <TextBlock Text="{Binding Manufacturer}" Width="200"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить" Command="{Binding AddCommand}"
                    Width="100" Height="30" Margin="5"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}"
                    Width="100" Height="30" Margin="5"/>
            <Button Content="Редактировать" Command="{Binding EditCommand}"
                    Width="100" Height="30" Margin="5"/>
            <Button Content="{Binding GroupButtonText}" Command="{Binding GroupCommand}"
                    Width="100" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>