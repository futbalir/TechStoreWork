<Window x:Class="TechStore.WpfApp.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать товар" Height="350" Width="400">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Product.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Цена:" Grid.Row="2" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Product.Price, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Margin="0,0,0,10"/>

        <TextBlock Text="Категория:" Grid.Row="4" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Product.Category, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Margin="0,0,0,10"/>

        <TextBlock Text="Количество на складе:" Grid.Row="6" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Product.StockQuantity, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Margin="0,0,0,10"/>

        <TextBlock Text="Производитель:" Grid.Row="8" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Product.Manufacturer, UpdateSourceTrigger=PropertyChanged}" Grid.Row="9" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Command="{Binding SaveCommand}"
                    Width="100" Height="30" Margin="5"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}"
                    Width="100" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>